{
    "slug": "facebook-message-sender",
    "description": "Automatically send messages to Facebook profiles",
    "image": "https://s3-eu-west-1.amazonaws.com/phantombuster-static/api-store/Facebook+Message+Sender/Facebook+Message+Sender.png",
    "gradientBegin": "#4e54c8",
    "gradientEnd": "#8f94fb",
    "argumentDescription": "",
    "hidden": true,
    "new": true,
    "argumentHelpAnchor": "#section_argument",
    "defaultArgument": {
        "sessionCookieCUser": "your_c-user_session_cookie",
        "sessionCookieXs": "your_xs_session_cookie",
        "spreadsheetUrl": "facebook_profile_urls",
        "message": "Hey #firstName#,\n\nI added you thanks to this awesome Phantombuster script!\n➡️ https://phantombuster.com/api-store/8852/facebook-message-sender\n\nNice to connect!\n\nBest regards",
        "csvName": "result"
    },
    "outputDescription": {
		"profileURL": "Facebook profile URL",
		"profilePictureUrl": "Profile picture URL",
		"name": "Full name",
		"status": "Friend or not",
        "work": "",
        "education": "",
        "cities": "",
        "contactInfo": "",
        "familyMembers": "",
        "lifeEvents": ""
	},
    "defaultArgumentAllowed": false,
    "argumentForm": {
        "enabled": true,
        "alpaca": {
            "options": {
                "fields": {
                    "sessionCookieCUser": {
                        "label": "Session cookie c_user <a href=\"/api-store/8852/facebook-message-sender#section_argument\" target=\"_blank\">(?)</a>",
                        "placeholder": "Paste your c_user session cookie here"
                    },
                    "sessionCookieXs": {
                        "label": "Session cookie xs <a href=\"/api-store/8852/facebook-message-sender#section_argument\" target=\"_blank\">(?)</a>",
                        "placeholder": "Paste your xs session cookie here"
                    },
					"spreadsheetUrl": {
						"helpers": [
							"Enter either a Facebook Profile URL <b>OR</b> a Google Spreadsheet URL <b>OR</b> a CSV URL",
							"When using a spreadsheet/CSV URL, make sure your file is publicly available"
						],
						"label": "Facebook Profile URL / Spreadsheet <a href=\"/api-store/8852/facebook-message-sender#section_5addagooglespreadsheet\" target=\"_blank\">(?)</a>"
                    },
                    "columnName": {
                        "label": "Column name from which to get Profile URLs <a href=\"/api-store/8852/facebook-message-sender#section_5addagooglespreadsheet\" target=\"_blank\">(?)</a>",
                        "placeholder": "Facebook Profile URLs",
                        "helper": "By default, we'll use the first column of your spreadsheet (column A)"
                    },
                    "message": {
						"label": "Message <a href=\"/api-store/8852/facebook-message-sender#section_6addaprivatepersonalizedmessage\" target=\"_blank\">(?)</a>",
						"type": "textarea",
						"helpers": [
							"Use #fbFirstName# to insert the first name of the person you are adding in your message. <a href=\"/api-store/8852/facebook-message-sender#section_6addaprivatepersonalizedmessage\", target=\"_blank\">Many more tags are available.</a>",
							"Leave empty to send invites without message"
						]
                    },
                    "profilesPerLaunch": {
						"label": "Number of profiles to process per launch - if none will try to scrape all of them  <a href=\"/api-store/8852/facebook-message-sender#section_repetitionsetup\" target=\"_blank\">(?)</a>",
						"inputType": "number"
					},
					"csvName": {
                        "label": "Name of resulting CSV file",
                        "placeholder": "result"
                    }
                }
            }
        }
    },
    "argumentSchema": {
        "type": "object",
        "properties": {
            "sessionCookieCUser": {
                "type": "string",
                "required": true,
                "minLength": 6
            },
            "sessionCookieXs": {
                "type": "string",
                "required": true,
                "minLength": 15
            },
            "spreadsheetUrl": {
				"type": "string",
				"required": true
            },
            "columnName": {
                "type": "string"
            },
            "message": {
				"type": "string",
                "maxLength": 1000,
                "minLength": 1
            },
            "profilesPerLaunch": {
                "type": "number",
                "minimum": 1
			},
            "csvName": {
				"type": "string",
				"required": false
            }
        }
    }
}