{
	"slug": "twitter-auto-liker",
	"description": "Automatically like the last tweets of a list of Twitter profiles",
	"image": "https://s3-eu-west-1.amazonaws.com/phantombuster-static/api-store/twitter_auto_liker/twitter_auto_liker_2.png",
	"argumentDescription": "",
	"gradientBegin": "#FFB75E",
	"gradientEnd": "#6eaeb9",
	"hidden": false,
	"new": true,
	"defaultArgument": {
		"sessionCookie": "session_cookie",
		"spreadsheetUrl": "phbuster"
	},
	"defaultArgumentAllowed": false,
	"argumentForm": {
		"enabled": true,
		"alpaca": {
			"schema": {
				"properties": {
					"spreadsheetUrl": {
						"required": true
					}
				}
			},
			"options": {
				"fields": {
					"sessionCookie": {
						"label": "Twitter session cookie <a target=\"_blank\" href=\"/api-store/5770/twitter-auto-liker#section_5getyourtwittersessioncookie\">(?)</a>",
						"helper": "Twitter auth_token cookie"
					},
					"spreadsheetUrl": {
						"label": "Spreadsheet URL or a Twitter profile URL <a target=\"_blank\" href=\"/api-store/5770/twitter-auto-liker#section_4createanicespreadsheet\">(?)</a>",
						"helper": "Enter either a Google Spreadsheet URL or a CSV URL (make sure your file is publicly available) or a Twitter profile"
					},
					"columnName": {
						"label": "Document column name title of Twitter profiles",
						"helper": "By default the script will take all contents from the first column",
						"placeholder": "Twitter Profile"
					},
					"numberOfProfilesPerLaunch": {
						"label": "Number of profiles like per launch <a target=\"_blank\" href=\"/api-store/5770/twitter-auto-liker#section_6configurerepetitivelaunches\">(?)</a>",
						"helper": "By default the script will like 10 profile per launch",
						"inputType": "number",
						"placeholder": 10
					},
					"likesCountPerProfile": {
						"label": "Amount of tweets to like for each profiles visited <a target=\"_blank\" href=\"/api-store/5770/twitter-auto-liker#section_6configurerepetitivelaunches\">(?)</a>",
						"helper": "By default the script will like 1 tweet per profile",
						"inputType": "number",
						"placeholder": 1
					},
					"csvName": {
						"type": "text",
						"placeholder": "result",
						"default": "result"
					}
				}
			}
		}
	},
	"argumentSchema": {
		"type": "object",
		"properties": {
			"sessionCookie": {
				"type": "string",
				"required": true
			},
			"spreadsheetUrl": {
				"type": "string"
			},
			"columnName": {
				"type": "string"
			},
			"numberOfProfilesPerLaunch": {
				"type": "number",
				"minimum": 1,
				"maximum": 10,
				"default": 1
			},
			"likesCountPerProfile": {
				"type": "number",
				"minimum": 1,
				"maximum": 1000,
				"default": 1
			},
			"csvName": {
				"type": "string",
				"title": "Output CSV name"
			}
		},
		"oneOf": [
			{
				"required": [
					"spreadsheetUrl"
				]
			},
			{
				"properties": {
					"queries": {
						"required": true,
						"type": "array",
						"items": {
							"type": "string",
							"minLength": 1
						}
					}
				}
			},
			{
				"properties": {
					"queries": {
						"required": true,
						"type": "string",
						"minLength": 1
					}
				}
			}
		]
	}
}
